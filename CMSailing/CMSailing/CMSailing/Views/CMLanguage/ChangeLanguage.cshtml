@{
    ViewBag.Title = @CMSailing.App_GlobalResources.Tranlations.changeLanguage;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <h2>
        @System.Threading.Thread.CurrentThread.CurrentCulture;
        @System.Threading.Thread.CurrentThread.CurrentUICulture;
    </h2>
    @Html.DropDownList("language", ViewBag.lang as SelectList)
    
    <input type="submit" value="@CMSailing.App_GlobalResources.Tranlations.submit"/>
}
@{Html.EndForm();}